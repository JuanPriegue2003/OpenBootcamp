//Factorial-for.js
//Este archivo debe calcular el factorial de 10 utilizando un solo bucle for
let total = 1; 
for ( i=1; i<=10; i++) {
total = total * i; 
}     console.log(total);

//factorial-while.js
//Este archivo debe calcular el factorial de 10 utilizando un bucle while
let totalB = 1;
i = 1;
while(i <= 10){
    totalB = totalB*i;i++;
}
console.log(totalB);

//factorial-break.js
/* Este archivo debe calcular el factorial de 10 utilizando un bucle while,
una bifurcaciÃ³n if y una sentencia break*/
let totalC = 1;
a = 1;
bucleNumero1: while(a <= 100){
    totalC = totalC*a;a++;
    if(a===11){break bucleNumero1}

}

console.log(totalC);
